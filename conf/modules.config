/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {

    // Default publishDir for all processes
    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    // =========================================
    // GATK4 CollectReadCounts
    // =========================================
    withName: 'GATK4_COLLECTREADCOUNTS' {
        ext.args = "--format ${params.read_count_format} --interval-merging-rule OVERLAPPING_ONLY"
        publishDir = [
            path: { "${params.outdir}/cnv/counts" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    // =========================================
    // GATK4 DenoiseReadCounts
    // =========================================
    withName: 'GATK4_DENOISEREADCOUNTS' {
        publishDir = [
            path: { "${params.outdir}/cnv/counts" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    // =========================================
    // GATK4 ModelSegments
    // =========================================
    withName: 'GATK4_MODELSEGMENTS' {
        publishDir = [
            path: { "${params.outdir}/cnv/model_segments/${meta.id}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    // =========================================
    // Local modules (to be created)
    // =========================================
    withName: 'COLLECTALLELICCOUNTS' {
        publishDir = [
            path: { "${params.outdir}/cnv/counts" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'CALLCOPYRATIOSEGMENTS' {
        publishDir = [
            path: { "${params.outdir}/cnv/called_segments" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'PLOTDENOISEDCOPYRATIOS' {
        publishDir = [
            path: { "${params.outdir}/cnv/plots/${meta.id}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'PLOTMODELEDSEGMENTS' {
        publishDir = [
            path: { "${params.outdir}/cnv/plots/${meta.id}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'ANNOTATE_CNV' {
        publishDir = [
            path: { "${params.outdir}/cnv/annotated/${meta.id}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}