{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/FlorPio/gatk-cnv-somatic/master/assets/schema_input.json",
    "title": "FlorPio/gatk-cnv-somatic pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "tumor_bam": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.bam$",
                "errorMessage": "Tumor BAM file must be provided and have extension '.bam'"
            },
            "normal_bam": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.bam$",
                "errorMessage": "Normal BAM file must be provided and have extension '.bam'"
            }
        },
        "required": ["sample", "tumor_bam", "normal_bam"]
    }
}
